<div class = "container">
  <h1>Repos of <%= @repos[0]["owner"]["login"] %> </h1>
  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>

  <div class="repos">
    <%= @repos.each do |repo| %>
      <div class="repo">
        <h3><%= repo["name"] %></h3>
      </div>
    <% end %>
  </div>

</div>
